<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.handas.dao.ShopDao">
	
	<select id="shopList" resultType="com.spring.handas.dto.ShopDto">
		SELECT * FROM (SELECT ROWNUM rnum, pnum, pname, item, price, pdesc, img1, img2, write_date 
		FROM ( SELECT * FROM handas_shop ORDER BY pnum desc ) handas_shop) 
		WHERE rnum &gt;= 1 and rnum &lt;= 10
	</select>
	
	<insert id="shopWrite" parameterType="map">
		INSERT INTO handas_shop VALUES(handas_shop_seq.nextval, #{pname}, #{item}, #{price}, #{pdesc}, #{img1}, #{img2}, sysdate)
	</insert>

</mapper>
