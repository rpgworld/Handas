<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.handas.user.UserDao">
	
	<!-- 로그인 -->
	<select id="login" resultType="String">
		SELECT userPW FROM handas_user WHERE userID = #{userID} 
	</select>
	
	<!-- 아이디 중복체크 -->
	<select id="idCheck" resultType="int">
		SELECT COUNT(*) FROM handas_user WHERE userID = #{userID} 
	</select>
	
	<!-- 회원가입 -->
	<insert id="join" parameterType="map">
		INSERT INTO handas_user VALUES(handas_user_seq.nextval, #{param1}, #{param2}, #{param3}, #{param4}, #{param5}, #{param6}, #{param7}, 'user')
	</insert>
	
	<!-- 회원 정보(수정폼) 가져오기 -->
	<select id="read" resultType="com.spring.handas.user.UserDto">
		SELECT * FROM handas_user WHERE userID = #{userID} 
	</select>
	
	<!-- 회원 정보 수정  --> 
	<update id="update">
		UPDATE handas_user SET userPW = #{param1}, userName = #{param2}, address1 = #{param3}, address2 = #{param4}, address3 = #{param5}, userEmail = #{param6} WHERE userID = #{param7}
	</update>
	
</mapper>
